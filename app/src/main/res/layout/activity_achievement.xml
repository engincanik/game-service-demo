<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".achievement.AchievementActivity">

    <Button
        android:id="@+id/btn_get_achieve_intent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:text="Achievement App Assistant"
        android:background="@drawable/btn_rounded_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_load_achievement"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_rounded_color"
        android:text="Achievement Custom Server"
        app:layout_constraintStart_toStartOf="@+id/btn_get_achieve_intent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_achieve_intent" />

    <Button
        android:id="@+id/btn_load_achievement_off"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/btn_rounded_color"
        android:text="Achievement Custom Local"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_load_achievement" />
</androidx.constraintlayout.widget.ConstraintLayout>